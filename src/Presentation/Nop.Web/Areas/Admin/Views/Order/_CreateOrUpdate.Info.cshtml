@using Nop.Core.Domain.Catalog
@using Nop.Services
@using Nop.Core.Domain.Enum
@model OrderModel

    <div class="panel-body">
        <div class="form-group">
            <div class="col-md-1">
                <label>Triệu chứng</label>
            </div>
            <div class="col-md-5">
                <nop-editor asp-for="CardName" />
                <span asp-validation-for="CardName"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-1">
                <label>Cách dùng</label>
            </div>
            <div class="col-md-5">
                <nop-select asp-for="PaymentStatusId" asp-items="((EnumCachDung)Model.PaymentStatusId).ToSelectList()" />
            </div>
            <div class="col-md-1">
                <label>Liều dùng</label>
            </div>
            <div class="col-md-5">
                <nop-select asp-for="AffiliateId" asp-items="((EnumLieuDung)Model.AffiliateId).ToSelectList()" />
            </div>
        </div>
        <div class="form-group">
            
        </div>
    </div>

<nop-alert asp-alert-id="generateCouponCodeFailed" asp-alert-message="@T("Admin.GiftCards.Fields.GiftCardCouponCode.Alert.FailedGenerate")" />

